<div class="posts">
  {% for post in postslist | reverse %}
    <div class="post">
      {% if post.data.thumbnail %}
        <img src="{{post.data.thumbnail}}" alt="{{post.data.title}}"/>
      {% endif %}

      <div>
        <time datetime="{{ post.data.created | htmlDateString }}">{{ post.data.created | readableDate("yyyy-LL-dd") }}</time><br/>

        <a href="{{ post.url }}">
          {% if post.data.title %}{{ post.data.title }}
          {% else %}
            <code>{{ post.url }}</code>
          {% endif %}
        </a>
      </div>
    </div>
  {% endfor %}
</div>
